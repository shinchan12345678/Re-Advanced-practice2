<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Create Group</h2>
    <%= form_with model: @group, local:true do |f| %>
      <%= render 'layouts/errors', obj: @group %>
      <div class="form-group">
        <%= f.label :group_name "グループ名" %>
        <%= f.text_field :group_name , class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction "紹介文" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
     <div class="form-group">
        <%= f.label :image "グループ画像" %>
        <%= f.file_field :pimage, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>