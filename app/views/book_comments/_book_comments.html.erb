<% book.book_comments.each do |book_comment| %>
  <p>
    <div>
      <span><%= image_tag book_comment.user.get_profile_image,size:'100x100' %></span>
      <span  class="mx-4"><%= book_comment.body %></span>
      <% if book_comment.user==current_user %>
        <%= link_to "Destroy",book_book_comment_path(book_comment.book,book_comment),method: :delete,class: "btn btn-danger",remote: true  %>
      <% end %>
      <br>
      <span>
        <%= link_to book_comment.user.name, user_path(book_comment.user) %>
      </span>
    </div>
  </p>
<% end %>